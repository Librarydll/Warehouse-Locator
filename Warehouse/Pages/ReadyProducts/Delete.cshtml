@page
@model Warehouse.Web.Pages.ReadyProducts.DeleteModel
@{
    ViewData["Title"] = "Delete ready product";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReadyProduct.Title"></label>
                    <h3>@Model.ReadyProduct!.Title</h3>
                </div>           
                <div class="form-group">
                    <label>ReadyProduct description</label>
                    <h3>@Model.ReadyProduct.Description</h3>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </section>
    </div>
</div>