@page
@model Warehouse.Web.Pages.Brigades.CreateModel
@{
    ViewData["Title"] = "Create brigade";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form  method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Brigade.Title"></label>
                    <input asp-for="Brigade.Title" class="form-control" />
                    <span asp-validation-for="Brigade.Title" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
